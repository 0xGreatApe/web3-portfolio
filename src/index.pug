doctype html

mixin box(shadowless=true)
  div(class=attributes.class)
    .box(class=shadowless ? 'is-shadowless' : '')
      block

html

  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title
    link(rel='stylesheet' href='./style/_index.scss')

  body

    header.hero.is-medium.is-super
      .hero-body
        .container
          .columns.is-vcentered
            .column.is-two-thirds.has-text-centered-mobile
              h1.title.is-1= title
              h3.subtitle.is-3= subtitle
            .column
              .user-photo
                figure.image.is-square
                  img.is-rounded.is-flipped-x(src='images/photo.jpg')

    section.section
      .container
        .columns.is-centered
          .column.is-1
            figure.image.is-32x32
              image(src='../node_modules/@fortawesome/fontawesome-free/svgs/solid/angle-down.svg' width="32" fill="grey")

    section.section
      .container
        .columns
          .column
            +box.box-about
              include about.pug
            +box(false).box-tips
              include tips.pug
          .column
            +box.box-links
              include links.pug
        hr.is-invisible
